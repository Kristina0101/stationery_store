            <Label x:Name="DateLabel" Content="Название" FontSize="12" HorizontalAlignment="Center" />
            <Label x:Name="PayLabel" Content="Сумма" FontSize="12" HorizontalAlignment="Center" />
        </StackPanel>
        <DataGrid x:Name="ProductsDataGrid" Margin="276,0,0.2,36.6" Background="#FFB0EFFF" BorderBrush="{x:Null}" />
        <Button x:Name="Download" Content="Выгрузить чек" HorizontalAlignment="Left" Height="37" Margin="0,409,0,-0.4" VerticalAlignment="Top" Width="715" Background="#FF78D2F9" BorderBrush="#FF99EBFF" FontSize="16" Foreground="#FF0B4AB4" Click="Download_Click"/>
    </Grid>
</Page>
