<Page x:Class="Lab_5.PurchasesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab_5"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="PurchasesPage" Height="445.955" Width="714.887">

    <Grid Background="#FFA4DAFF">
        <StackPanel Grid.Column="0" Margin="0,0,439.2,36.6" Background="#FFB1F2FF">
