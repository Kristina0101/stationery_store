        <Button x:Name="Upload_button1" Content="Внести изменения" HorizontalAlignment="Left" Height="23" Margin="407,415,0,0" VerticalAlignment="Top" Width="192" Background="#FF78D2F9" BorderBrush="#FF99EBFF" FontSize="16" Foreground="#FF0B4AB4" Click="Upload_button1_Click" Visibility="Hidden"/>
        <Button x:Name="Delete_button" Content="Удалить элемент" HorizontalAlignment="Left" Height="23" Margin="10,415,0,0" VerticalAlignment="Top" Width="192" Background="#FF78D2F9" BorderBrush="#FF99EBFF" FontSize="16" Foreground="#FF0B4AB4" Click="Delete_button_Click"/>
