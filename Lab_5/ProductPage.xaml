        <ComboBox x:Name="ComboBox1" HorizontalAlignment="Left" Height="23" Margin="526,359,0,0" VerticalAlignment="Top" Width="73" FontSize="14" SelectionChanged="ComboBox1_SelectionChanged" Visibility="Hidden" ToolTip="Классификация"/>
        <TextBox x:Name="Add_box2" HorizontalAlignment="Left" Height="23" Margin="10,387,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" FontSize="14" Visibility="Hidden" ToolTip="Страна производитель"/>
        <TextBox x:Name="Add_box3" HorizontalAlignment="Left" Height="23" Margin="162,387,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" FontSize="14" Visibility="Hidden" ToolTip="Артикул"/>
        <ComboBox x:Name="ComboBox2" HorizontalAlignment="Left" Margin="343,387,0,0" VerticalAlignment="Top" Width="59" Height="23" FontSize="14" SelectionChanged="ComboBox2_SelectionChanged" Visibility="Hidden" ToolTip="Склад"/>
        <Button x:Name="add_button" Content="Добавить элементы" HorizontalAlignment="Left" Height="23" Margin="407,387,0,0" VerticalAlignment="Top" Width="192" Background="#FF78D2F9" BorderBrush="#FF99EBFF" FontSize="16" Foreground="#FF0B4AB4" Click="add_button_Click" Visibility="Hidden"/>
        <TextBlock x:Name="upload_text" HorizontalAlignment="Left" Margin="10,324,0,0" TextWrapping="Wrap" Text="Изменение:" VerticalAlignment="Top" FontSize="20" Visibility="Hidden"/>
        <TextBox x:Name="Upload_box" HorizontalAlignment="Left" Height="23" Margin="10,359,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" FontSize="14" Visibility="Hidden" ToolTip="Название товара"/>
        <TextBox x:Name="Upload_box1" HorizontalAlignment="Left" Height="23" Margin="343,359,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" FontSize="14" Visibility="Hidden" ToolTip="Цена"/>
        <ComboBox x:Name="ComboBox3" HorizontalAlignment="Left" Height="23" Margin="526,359,0,0" VerticalAlignment="Top" Width="73" FontSize="14" SelectionChanged="ComboBox3_SelectionChanged" Visibility="Hidden" ToolTip="Классификация"/>
        <TextBox x:Name="Upload_box2" HorizontalAlignment="Left" Height="23" Margin="10,387,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" FontSize="14" Visibility="Hidden" ToolTip="Страна производитель"/>
        <TextBox x:Name="Upload_box3" HorizontalAlignment="Left" Height="23" Margin="162,387,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" FontSize="14" Visibility="Hidden" ToolTip="Артикул"/>
        <ComboBox x:Name="ComboBox4" HorizontalAlignment="Left" Margin="343,387,0,0" VerticalAlignment="Top" Width="59" Height="23" FontSize="14" SelectionChanged="ComboBox4_SelectionChanged" Visibility="Hidden" ToolTip="Склад"/>
